<style>

#contact {
    height: 100vh;
  }

  #contact h2 {
    color: aliceblue;
    text-shadow: 2px 2px 8px rgba(0, 163, 225, 0.5);
  }

  #contact p {
    color: aliceblue;
    font-family: "Roboto", "sans-serif";
    text-shadow: 2px 2px 8px rgba(0, 163, 225, 0.5);
    font-size: 2rem;

  }
.neon-box-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: transparent;
  
}

.neon-box {
  background-color: transparent;
  border: 2px solid #9f36db; /* Neon green color */
  box-shadow: 0 0 10px #00ffff; /* Neon green color */
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px; /* Adjust as needed */
  width: 50%;
  backdrop-filter: blur(25px) brightness(0.8);
}

.button-container {
  display: flex;
  justify-content: center;
}

button {
    background-color: #00e3e8;
    border: none;
    color: #fff;
    box-shadow: 0 0 5px #00e3e8, 0 0 10px #00e3e8, 0 0 15px #00e3e8;

  }

  button:hover,
  button:focus {
    background-color: #00b7c0;
    box-shadow: 0 0 5px #00b7c0, 0 0 10px #00b7c0, 0 0 15px #00b7c0;
  }

  button:focus {
    outline: none;
  }



/* Media queries for responsiveness */
@media (max-width: 768px) {
  .neon-box {
    width: 80%; /* Adjust as needed for smaller screens */
  }
}

@media (max-width: 480px) {
  .neon-box {
    width: 90%; /* Adjust as needed for smaller screens */
  }
}

</style>

<script src="https://cdn.jsdelivr.net/npm/mailto@0.1.2/index.min.js"></script>
